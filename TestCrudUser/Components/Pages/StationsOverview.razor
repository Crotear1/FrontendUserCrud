@page "/stationsuebersicht"
@using TestCrudUser.Data
@using TestCrudUser.Components

<PageTitle>Stationsübersicht</PageTitle>

<h1>Stationsübersicht</h1>

@if (stationen == null || !stationen.Any())
{
    <p><em>Lade Stationsdaten...</em></p>
}
else
{
    <div class="stations-list">
        @foreach (var station in stationen)
        {
            <StationDisplay Station="station" />
        }
    </div>
}

